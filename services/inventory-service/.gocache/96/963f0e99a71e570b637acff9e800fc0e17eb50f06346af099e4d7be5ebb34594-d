func (a *InventoryAllocationAggregate) MarkShipped(shippedBy string) error {goCover_4dfb824e56d3__60[0] = 3 ; goCover_4dfb824e56d3__60[1] = goCover_4dfb824e56d3_P ; goCover_4dfb824e56d3__60[2] = 60 ; goCover_4dfb824e56d3__60[3] = 1;
