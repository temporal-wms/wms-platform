// MarkPacked marks the allocation as packed (ready for shipping)
func (a *InventoryAllocationAggregate) MarkPacked(packedBy string) error {goCover_4dfb824e56d3__59[0] = 3 ; goCover_4dfb824e56d3__59[1] = goCover_4dfb824e56d3_P ; goCover_4dfb824e56d3__59[2] = 59 ; goCover_4dfb824e56d3__59[3] = 1;
	if a.Status != AllocationStatusStaged {goCover_4dfb824e56d3__59[5] = 1;
		return ErrAllocationNotStaged
	}

	goCover_4dfb824e56d3__59[4] = 1;now := time.Now()
	a.Status = AllocationStatusPacked
	a.PackedBy = packedBy
	a.PackedAt = &now
	a.UpdatedAt = now

	// Emit packed event
	a.AddDomainEvent(&InventoryPackedEvent{
		SKU:          a.SKU,
		AllocationID: a.AllocationID,
		OrderID:      a.OrderID,
		PackedBy:     packedBy,
		PackedAt:     now,
	})

	return nil
}

