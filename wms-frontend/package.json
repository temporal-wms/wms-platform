{
  "name": "@wms-platform/frontend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run-many -t dev --parallel=10",
    "dev:shell": "nx run shell:dev",
    "dev:orders": "nx run orders:dev",
    "dev:waves": "nx run waves:dev",
    "dev:inventory": "nx run inventory:dev",
    "dev:dashboard": "nx run dashboard:dev",
    "build": "nx run-many -t build",
    "build:shell": "nx run shell:build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:watch": "vitest watch",
    "test:ci": "vitest run --coverage --reporter=json --reporter=html",
    "test:packages": "vitest run packages/",
    "test:apps": "vitest run apps/",
    "lint": "nx run-many -t lint",
    "preview": "nx run-many -t preview --parallel=10",
    "generate:api": "./tools/scripts/generate-api-clients.sh",
    "clean": "nx reset && rm -rf node_modules **/node_modules **/dist"
  },
  "devDependencies": {
    "@nx/js": "^19.8.0",
    "@nx/react": "^19.8.0",
    "@nx/vite": "^19.8.0",
    "@nx/web": "^19.8.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "jsdom": "^24.1.3",
    "msw": "^2.12.7",
    "nx": "^19.8.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.0",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.0",
    "vitest-mock-extended": "^1.3.2"
  },
  "dependencies": {
    "@originjs/vite-plugin-federation": "^1.3.6",
    "@tanstack/react-query": "^5.62.0",
    "axios": "^1.7.9",
    "lucide-react": "^0.468.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "zustand": "^5.0.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
